        }
    }

    .no-gutters {
        margin-right: 0;
        margin-left: 0;
    }

        .no-gutters > .col,
        .no-gutters > [class*="col-"] {
            padding-right: 0;
            padding-left: 0;
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .h5 {
            font-size: 1rem;
        }

        .fa-2x {
            font-size: 1.5em;
        }

        .btn {
            font-size: 0.8rem;
        }
    }
</style>