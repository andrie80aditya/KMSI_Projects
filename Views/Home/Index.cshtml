@model KMSI_Projects.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<!-- Custom CSS for Dashboard -->
<style>
    .stats-card {
        border-radius: 15px;
        border: none;
        overflow: hidden;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .stats-card .card-body {
            padding: 1.5rem;
        }

    .stats-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0.5rem 0;
    }

    .stats-label {
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        opacity: 0.8;
    }

    .stats-subtitle {
        font-size: 0.75rem;
        margin-top: 0.25rem;
    }

    .recent-activity-item {
        padding: 1rem;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.2s ease;
    }

        .recent-activity-item:hover {
            background-color: #f8f9fa;
        }

        .recent-activity-item:last-child {
            border-bottom: none;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.875rem;
        color: white;
    }

    .quick-action-btn {
        height: 120px;
        border-radius: 15px;
        border: 2px dashed #dee2e6;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
        color: #6c757d;
    }

        .quick-action-btn:hover {
            border-color: #007bff;
            color: #007bff;
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 20px 20px;
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-2">
                    <i class="fas fa-tachometer-alt me-3"></i>Dashboard
                </h1>
                <p class="mb-0 opacity-75">Welcome back, @User.Identity?.Name</p>
                <small class="opacity-50">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="d-flex justify-content-md-end gap-2">
                    <button class="btn btn-light btn-sm" onclick="location.reload()">
                        <i class="fas fa-sync-alt me-1"></i>Refresh
                    </button>
                    <a href="@Url.Action("Create", "Student")" class="btn btn-warning btn-sm">
                        <i class="fas fa-plus me-1"></i>New Student
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Statistics Cards Row -->
    <div class="row g-4 mb-4">
        <!-- Total Students Card -->
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card stats-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon" style="background: linear-gradient(45deg, #4e73df, #224abe);">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <div class="stats-label text-primary">Total Students</div>
                            <div class="stats-number text-dark">@Model.TotalStudents.ToString("N0")</div>
                            <div class="stats-subtitle text-success">
                                <i class="fas fa-check-circle me-1"></i>@Model.ActiveStudents Active
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Teachers Card -->
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card stats-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon" style="background: linear-gradient(45deg, #1cc88a, #13855c);">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <div class="stats-label text-success">Total Teachers</div>
                            <div class="stats-number text-dark">@Model.TotalTeachers.ToString("N0")</div>
                            <div class="stats-subtitle text-success">
                                <i class="fas fa-check-circle me-1"></i>@Model.ActiveTeachers Active
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Sites Card -->
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card stats-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon" style="background: linear-gradient(45deg, #36b9cc, #258391);">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <div class="stats-label text-info">Total Sites</div>
                            <div class="stats-number text-dark">@Model.TotalSites.ToString("N0")</div>
                            <div class="stats-subtitle text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i>Locations
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Revenue Card -->
        <div class="col-xl-3 col-lg-6 col-md-6">
            <div class="card stats-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon" style="background: linear-gradient(45deg, #f6c23e, #dda20a);">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <div class="stats-label text-warning">Monthly Revenue</div>
                            <div class="stats-number text-dark">@Model.MonthlyRevenue.ToString("C")</div>
                            <div class="stats-subtitle text-muted">
                                <i class="fas fa-calendar me-1"></i>This Month
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row: Recent Activities and Quick Actions -->
    <div class="row g-4 mb-4">
        <!-- Recent Activities -->
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clock text-primary me-2"></i>Recent Activities
                        </h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i>View All</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-sync me-2"></i>Refresh</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentActivities.Any())
                    {
                        @foreach (var activity in Model.RecentActivities.Take(8))
                        {
                            <div class="recent-activity-item">
                                <div class="d-flex align-items-center">
                                    <div class="activity-icon bg-@activity.Color">
                                        <i class="@activity.Icon"></i>
                                    </div>
                                    <div class="ms-3 flex-grow-1">
                                        <div class="fw-semibold">@activity.Type</div>
                                        <div class="text-muted small">@activity.Description</div>
                                    </div>
                                    <div class="text-end">
                                        <div class="text-muted small">@activity.TimeAgo</div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No recent activities</h6>
                            <p class="text-muted small">Activities will appear here as they happen</p>
                        </div>
                    }
                </div>
                @if (Model.RecentActivities.Count > 8)
                {
                    <div class="card-footer bg-light text-center">
                        <a href="#" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye me-1"></i>View All Activities
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-warning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <a href="@Url.Action("Create", "Student")" class="quick-action-btn d-flex flex-column align-items-center justify-content-center w-100 text-decoration-none">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <small class="fw-semibold">New Student</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Create", "Teacher")" class="quick-action-btn d-flex flex-column align-items-center justify-content-center w-100 text-decoration-none">
                                <i class="fas fa-chalkboard-teacher fa-2x mb-2"></i>
                                <small class="fw-semibold">New Teacher</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Create", "ClassSchedule")" class="quick-action-btn d-flex flex-column align-items-center justify-content-center w-100 text-decoration-none">
                                <i class="fas fa-calendar-plus fa-2x mb-2"></i>
                                <small class="fw-semibold">Schedule Class</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Create", "Examination")" class="quick-action-btn d-flex flex-column align-items-center justify-content-center w-100 text-decoration-none">
                                <i class="fas fa-clipboard-check fa-2x mb-2"></i>
                                <small class="fw-semibold">New Exam</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Index", "StudentBilling")" class="quick-action-btn d-flex flex-column align-items-center justify-content-center w-100 text-decoration-none">
                                <i class="fas fa-file-invoice-dollar fa-2x mb-2"></i>
                                <small class="fw-semibold">Billing</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Index", "Inventory")" class="quick-action-btn d-flex flex-column align-items-center justify-content-center w-100 text-decoration-none">
                                <i class="fas fa-warehouse fa-2x mb-2"></i>
                                <small class="fw-semibold">Inventory</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Info Row -->
    <div class="row g-4">
        <!-- Pending Items -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0 text-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>Pending Items
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-clipboard-check fa-3x text-warning mb-3"></i>
                        <h3 class="text-warning">@Model.PendingExaminations</h3>
                        <p class="text-muted mb-0">Pending Examinations</p>
                    </div>
                    <a href="@Url.Action("Index", "Examination")" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-eye me-1"></i>View Details
                    </a>
                </div>
            </div>
        </div>

        <!-- System Info -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0 text-info">
                        <i class="fas fa-info-circle me-2"></i>System Info
                    </h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <div class="d-flex justify-content-between py-1">
                            <span class="text-muted">Version:</span>
                            <span class="fw-semibold">1.0.0</span>
                        </div>
                        <div class="d-flex justify-content-between py-1">
                            <span class="text-muted">Environment:</span>
                            <span class="fw-semibold">Development</span>
                        </div>
                        <div class="d-flex justify-content-between py-1">
                            <span class="text-muted">Last Updated:</span>
                            <span class="fw-semibold">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Support Contact -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="card-title mb-0 text-primary">
                        <i class="fas fa-headset me-2"></i>Need Help?
                    </h6>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted small mb-3">Contact our support team for assistance</p>
                    <div class="d-grid gap-2">
                        <a href="mailto:support@kawaimusic.id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-envelope me-1"></i>Email Support
                        </a>
                        <a href="tel:+6221-12345678" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-phone me-1"></i>Call Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Dashboard -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-refresh dashboard every 5 minutes
        setInterval(function() {
            // You can add auto-refresh logic here if needed
            console.log('Dashboard auto-refresh check');
        }, 300000); // 5 minutes

        // Add click tracking for quick actions
        document.querySelectorAll('.quick-action-btn').forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                // Add loading state
                const icon = this.querySelector('i');
                icon.className = 'fas fa-spinner fa-spin fa-2x mb-2';
            });
        });

        // Tooltip initialization for better UX
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>