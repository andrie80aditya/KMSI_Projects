@model KMSI_Projects.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="text-center">
                <!-- Error Icon -->
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                </div>

                <!-- Error Title -->
                <h1 class="h3 text-danger mb-3">Something Went Wrong</h1>

                <!-- Error Message -->
                <p class="text-muted mb-4">
                    We're sorry, but an error occurred while processing your request.
                </p>

                <!-- Request ID -->
                @if (Model?.ShowRequestId == true)
                {
                    <div class="alert alert-light mb-4">
                        <small class="text-muted">
                            <strong>Request ID:</strong> @Model.RequestId
                        </small>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-md-block">
                    <button onclick="history.back()" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </div>

                <!-- Support Info -->
                <div class="mt-4">
                    <small class="text-muted">
                        If the problem persists, please contact
                        <a href="mailto:support@kawaimusic.id">support@kawaimusic.id</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>